{
    "name": "rafaelbernard/bref-initial-php-aws-story",
    "type": "project",
    "authors": [
        {
            "name": "Rafael Araujo",
            "email": "rafael@bernard-araujo.com"
        }
    ],
    "require": {
        "php": ">=8.3",
        "ext-ctype": "*",
        "async-aws/dynamo-db": "^3.1",
        "async-aws/s3": "^1.13",
        "bref/bref": "^2",
        "monolog/monolog": "^3.3",
        "symfony/http-foundation": "^7"
    },
    "autoload": {
        "psr-4": {
            "BrefStory\\": "src/",
            "Test\\Unit\\BrefStory\\": "tests/unit/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*"
    },
    "scripts": {
        "prepare-unit-cmd": "@composer install",
        "unit-cmd": "./vendor/bin/phpunit -c tests/unit/phpunit.xml",
        "unit": [
            "@prepare-unit-cmd",
            "@unit-cmd"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    }
}
